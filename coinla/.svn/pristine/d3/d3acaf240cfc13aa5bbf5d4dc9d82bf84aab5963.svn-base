    mounted() {
      this.getShareSize(0)
    },
    methods: {
      getShareSize(type) {
        getCoinlaSingle('/share/multi', {type: type}).then((res) => {
          if (res.data.code === 0) {
            this.shareData = res.data.data
            shareWeixin(window.location.href, res.data.data)
          }
        })
      },
      download(params) {
        getCoinlaSingle('/download/executed', {type: this.$route.query.type || '0', code: this.$route.query.code || ''}).then((res) => {
          if (res.data.code === 0) {
          }
        })
        if (isIos()) {
          window.location.href = 'https://itunes.apple.com/cn/app/coinla/id1359706851?mt=8'
        } else {
          this.is_weixn_qq()
        }
      },
      is_weixn_qq() {
        let ua = navigator.userAgent.toLowerCase();
        if (ua.match(/MicroMessenger/i) == "micromessenger") {
          this.show = true
        } else {
          window.location.href = 'https://api.coinla.com/download/android'
        }
      }
    }
  }
