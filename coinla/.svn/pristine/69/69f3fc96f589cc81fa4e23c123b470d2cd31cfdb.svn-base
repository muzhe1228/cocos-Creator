            uuid: this.$route.params.uuid,
            awardsName: awardsName,
            infoId: infoId,
            headersToken: this.$route.params.headersToken
          }))
        this.$router.push({name: 'getGroupAward', params: {
          uuid: this.$route.params.uuid,
