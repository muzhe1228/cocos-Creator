@import "variable.styl"

*
  list-style: none
  text-decoration: none
  font-family: Arial, HelveticaRe, "Helvetica Neue", 'Microsoft Yahei', '\5FAE\8F6F\96C5\9ED1', 'Hiragino Sans GB', '\5B8B\4F53' !important
  box-sizing: border-box
  margin: 0
  padding: 0
  outline: none
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  line-height: 1
  -webkit-tap-highlight-color: transparent
  //min-width: 1190px
  //font-family:  Arial, 'Times New Roman', HelveticaRe, "Helvetica Neue", "Microsoft YaHei Regular", "Microsoft YaHei", "微软雅黑", sans-serif !important
  background-color: #fff
  color: $size-main
  font-size: $font-m
  a
    color: $size-main

input {
  -webkit-appearance: none;
}

//img {
//  pointer-events: none;
//}

#cnzz_stat_icon_1273761229
  position: fixed
  left: 0
  top: 0
  z-index: -1
  opacity: 0

.f-l
  float: left

.f-r
  float: right

.clear-f:after
  content: "\0020"
  display: block
  height: 0
  clear: both

.clear-f
  zoom: 1

.container
  margin: 0 auto
  position: relative
  padding: 0 .32rem
  max-width: 1080px

.color-red
  color: #f53846 !important

.color-green
  color: #00b785 !important

.color-gray
  color: #454545 !important

.color-star
  color: #b5b5b5 !important

.color-starA
  color: #debd63 !important

.goToUrl
  hover-hand()
  z-index: 2

.AppDown {
  img {
    width: 324px
    height: 180px
  }
}

.Href
  cursor: pointer
  text-decoration: underline
  transition: all .3s linear
  &:hover
    color: $main-color !important

.aClick
  cursor: pointer
  color: #0d93ff
  display: flex
  width: 100%
  height: 100%
  align-items: center
  transition: all .2s linear
  &:hover
    text-decoration: underline

input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0px 1000px white inset
  -webkit-text-fill-color: #333
}

@keyframes SvgAm
  0%
    stroke-dasharray: 0, 1000
  30%
    stroke-dasharray: 150, 1000
  60%
    stroke-dasharray: 300, 1000
  90%
    stroke-dasharray: 450, 1000
  100%
    stroke-dasharray: 1000, 1000

@keyframes hoverBook
  0%
    opacity: 0
  30%
    opacity: .25
  60%
    opacity: .5
  90%
    opacity: .75
  100%
    opacity: 1

img[lazy=loading] {
  //your code
}

img[lazy=loaded] {
  //your code
  animation: fade 0.5s
}

@keyframes fade {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}

.noDataImg {
  position: relative
  left: 50%
  transform: translateX(-50%)
  max-width: 200px
  padding: 20px
}

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}

.fade-enter, .fade-leave-to {
  opacity: 0;
}

.pswp__counter {
  left: 50% !important
  top: 10px !important
  transform: translateX(-50%)
}
